<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.credit_check.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                
                <button name="do_new_transfer" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('credit_check', '!=', True)]}</attribute>
                </button>
                
                <button name="do_new_transfer" position="after">
                    <button name="do_new_transfer" attrs="{'invisible': ['|', ('credit_check', '=', True)]}" states="draft,partially_available,assigned" string="Validate" groups="stock.group_stock_user" type="object" class="oe_highlight"/>
                </button>
                
                <field name="partner_id" position="after">
                    <field name="credit_check"/>
                </field>
            </field>
        </record>
        
    </data>
</openerp>

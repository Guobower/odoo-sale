<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
    
    <record id="view_product_template_form_img_filestore" model="ir.ui.view">
        <field name="name">Product Multi Images</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Images">
                    <field name="image_attachment_ids" nolabel="1" widget="many2many" context="{'default_name': name, 'search_default_name': name}">
                        <tree>
                            <field name="datas" widget="image"/>
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    
</data>
</openerp>
